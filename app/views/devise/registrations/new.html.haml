= render "shared/header"
%ul.category__lists
  %li.category__lists--tag 登録画面
.form-content
  .form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-detail
        .form-detail__input
          .new-form
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "ニックネーム"
        .form-detail__input
          .new-form
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .form-detail__input
          .new-form
            = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)"
        .form-detail__input
          .new-form
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードの確認"
      .actions
        = f.submit "登録する",class: "submit_btn"
      = render "devise/shared/links"
