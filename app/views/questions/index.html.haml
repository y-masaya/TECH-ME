= render "shared/header"
%ul.category__lists
  %li.category__lists--tag
    =link_to 'article', ''
  %li.category__lists--tag
    =link_to 'wifi cafe',cafemap_articles_path
.main
  %h2.block-heading Questions
  - @questions.each do |question|
    %ul.articles
      %li.articles__post.effect-fade.effect-scroll
        =link_to question_path(question.id) do
          .article-info
            %p.article-info__title
              = question.title
            %p.article-info__text
              =question.content
            .article-info__bottom
              %p.posted-info__bottom--category Ruby/
              %p.article-info__bottom--date 
                = question.created_at.strftime("%Y,%-m,%-d,")
              %p.article-info__bottom--username
                = question.user.nickname
.pagenate
  = paginate(@questions)
.footer
